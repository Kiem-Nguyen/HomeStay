<!-- The Modal Add Image -->
<div id="EditImagePopup" class="modal hidden">
    <form class="modal-content animate" enctype="multipart/form-data">
        <div class="imgcontainer">
            <span class="close CloseModal" title="Close Modal">&times;</span>
            <h3 id="nameAndIdImage" style="text-align: center;">Edit Image</h3>
            <input type="hidden" id="hiddenIDEdit" />
        </div>

        <div class="">
            <div class="error-login-text">

            </div>

            <label for="uname"><b>Choose Image</b></label>
            @Html.TextBox("file", "", new { type = "file" }) <br />
            <input type="hidden" id="hiddenFileEdit" />

            <label for="psw"><b>HomeStay ID - Name</b></label>
            <select class="selectpicker" id="multipleHomestay-edit"></select>
            <input type="hidden" id="hiddenSelectEdit" />
            <br />
            <button type="button" class="badge button" id="SubmitEditImage">Save</button>
        </div>
    </form>
</div>