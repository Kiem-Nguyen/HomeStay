<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login Adminstrator</title>
    <!-- Google Fonts -->
    <link href="~/Areas/AdminControl/Css/animate.css" rel="stylesheet" />
    <link href="~/Areas/AdminControl/Css/style.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700|Lato:400,100,300,700,900' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="top">
            <h1 id="title" class="hidden"><span id="logo"><span>Hello Adminstrator</span></span></h1>
        </div>
        <form class="modal-content animate">
            <div class="login-box animated fadeInUp">
                <div class="box-header">
                    <h2>Log In</h2>
                </div>
                <label for="UseName">Username</label>
                <br />
                <input type="text" placeholder="Enter Username Admin" name="UseName">
                <br />
                <label for="password">Password</label>
                <br />
                <input type="password" placeholder="Enter Password" name="PassWord">
                <br />
                <button type="submit">Sign In</button>
                <br />
                <a href="#"><p class="small">Forgot your password?</p></a>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $('#logo').addClass('animated fadeInDown');
        $("input:text:visible:first").focus();


        $("#login").on("click", function () {
            var UseName = $("input[name=UseName]").val();
            var PassWord = $("input[name=PassWord]").val();
            $.ajax({
                url: "@Url.Action("Admin", "LoginAdmin")",
                type: "POST",
                data: { PassWord: PassWord, UseName: UseName },
                success: function (data) {
                    if (data.success == true)
                        location.reload();
                    else {
                        $('.error-login-text').html('<label style="color:red; text-align:center; margin-left: 35%;"><b>Username or password is not exit</b></label><br />');
                        $("input[name=PassWord]").val('');
                    }
                }, error: function (error) {
                    $('.error-login-text').html('<label style="color:red; text-align:center; margin-left: 35%;"><b>Username or password is not exit</b></label><br />');
                    $("input[name=PassWord]").val('');
                }
            });
        });

    });

    $('#username').focus(function () {
        $('label[for="username"]').addClass('selected');
    });

    $('#username').blur(function () {
        $('label[for="username"]').removeClass('selected');
    });

    $('#password').focus(function () {
        $('label[for="password"]').addClass('selected');
    });

    $('#password').blur(function () {
        $('label[for="password"]').removeClass('selected');
    });

</script>